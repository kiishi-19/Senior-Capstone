#include <iostream>
#include <string>

class Employee {
protected:
    std::string name;
    std::string role;

public:
    Employee(std::string employeeName, std::string employeeRole) : name(employeeName), role(employeeRole) {}

    void displayInfo() const {
        std::cout << "Name: " << name << ", Role: " << role << std::endl;
    }
};

class Manager : public Employee {
private:
    int teamSize;

public:
    Manager(std::string name, int size) : Employee(name, "Manager"), teamSize(size) {}

    void displayInfo() const {
        std::cout << "Name: " << name << ", Role: " << role << ", Team Size: " << teamSize << std::endl;
    }
};

int main() {
    Employee john("John", "Developer");
    john.displayInfo();

    Manager jane("Jane", 5);
    jane.displayInfo();

    return 0;
}
